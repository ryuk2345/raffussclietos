generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Client {
  id           String   @id @default(cuid())
  company      String
  contactName  String?
  email        String?  @unique
  planBase     String
  status       String
  startDate    String?
  renewalDate  String?
  driveFolder  String?   @default("")
  accessCode   String?   @unique
  platforms    String[]  @default([])
  metrics      Json?     @default("{\"reach\":0,\"leads\":0,\"clicks\":0,\"spent\":0}")
  billingCycle String?   @default("30")
  password     String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  tasks        Task[]
}

model Task {
  id            String   @id @default(cuid())
  title         String
  category      String?
  status        String   @default("Pendiente")
  progress      Int      @default(0)
  clientId      String
  responsible   String?
  deadline      String?
  description   String?
  comments      Json?    @default("[]")
  attachments   Json?    @default("[]")
  clientFeedback String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  client        Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)
}

model User {
  id           String   @id @default(cuid())
  name         String
  role         String
  email        String   @unique
  passwordHash String
  status       String   @default("Activo")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model ServicePackage {
  id          String   @id @default(cuid())
  name        String
  description String
  price       Float
  features    String[]
  status      String   @default("Activo")
}